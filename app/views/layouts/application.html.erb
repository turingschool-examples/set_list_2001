<!DOCTYPE html>
<html>
  <head>
    <title>My fancy application</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <% flash.each do |type, message| %>
    <p><%= message %></p>
  <% end %>

  <body>
    <p>Cart: <%= cart.total_count %></p>

    <%= yield %>
  </body>
</html>
